BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.3
            Button:
                text: "Create Widgets"
                on_release: app.create_widgets()
            Button:
                text: "Clear Widgets"
                on_release: app.clear_widgets()
        BoxLayout:
            orientation: "vertical"
            id: entriesBox
    Label:
        id: text_output
        text: app.text_output
        size_hint_y: 0.1
