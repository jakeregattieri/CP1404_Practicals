BoxLayout:
    orientation: "vertical"
    GridLayout:
        cols:2
        TextInput:
            id: input_miles
            text: '34.0'
            font_size: 48
        GridLayout
            rows:2
            size_hint_x:0.25
            Button:
                text: "Up"
                on_release: app.handle_increment(1)
            Button:
                text: "Down"
                on_release: app.handle_increment(-1)
    Button:
        text: "Convert Miles to Kilometres"
        on_release: app.handle_miles_to_kilometres()
    Label:
        id: output_kilometres
        text:""
        font_size: 48
        color: (1,0,1,0)