<Widget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0, 0, 0, 0

<Button>:
    background_normal: ''
    background_down: 'atlas://data/images/defaulttheme/button'
    canvas.after:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            rectangle: self.x + 1, self.y + 1, self.width - 1, self.height - 1
<TextInput>
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1

BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_miles
            text: '34.0'
            font_size: 48
        BoxLayout:
            orientation: "vertical"
            size_hint_x:0.25
            Button:
                text: "Up"
                on_release: app.handle_increment(1)
            Button:
                text: "Down"
                on_release: app.handle_increment(-1)
    Button:
        text: "Convert Miles to Kilometres"
        on_release: app.handle_miles_to_kilometres()
    Label:
        id: output_kilometres
        text:""
        font_size: 48


