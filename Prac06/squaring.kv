BoxLayout:
    orientation: 'horizontal'
    GridLayout:
        cols:3
        TextInput:
            id: input_number
            text: '7'
            font_size: 42
            multiline: False
        Button:
            text: 'Square it'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(float(input_number.text))
        Label:
            id: output_label
            font_size: 42
            color: (1, 0, .7, 0)
    Label:
        text: 'Enter a number and press "square it"'